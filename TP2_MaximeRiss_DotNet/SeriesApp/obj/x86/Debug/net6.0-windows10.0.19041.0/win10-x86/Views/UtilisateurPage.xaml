<Page
    x:Class="SeriesApp.Views.UtilisateurPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel x:ConnectionId='2' x:Name="ContentArea" HorizontalAlignment="Center">
        <RelativePanel RelativePanel.AlignHorizontalCenterWithPanel="True" >
            <TextBox x:ConnectionId='3' Name="inputMailBox" 
                     RelativePanel.AlignHorizontalCenterWithPanel="True"
                     Width="200"
                     >
            </TextBox>

            <TextBlock x:ConnectionId='4' Name ="textMail" 
                       RelativePanel.LeftOf="inputMailBox" 
                       Margin="5"
                       Text="Mail"
                       >
            </TextBlock>
            <Button x:ConnectionId='5' Name="SearchButton"
                                              
                    RelativePanel.RightOf="inputMailBox"
                    Margin="20, 0"
                >Rechercher
            </Button>
        </RelativePanel>
        
    </RelativePanel>
</Page>

