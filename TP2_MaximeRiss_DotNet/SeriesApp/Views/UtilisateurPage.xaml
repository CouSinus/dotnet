<Page
    x:Class="SeriesApp.Views.UtilisateurPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel x:Name="ContentArea" HorizontalAlignment="Center">
        <RelativePanel RelativePanel.AlignHorizontalCenterWithPanel="True" >
            <TextBox Name="inputMailBox" 
                     RelativePanel.AlignHorizontalCenterWithPanel="True"
                     Width="200"
                     >
            </TextBox>

            <TextBlock Name ="textMail" 
                       RelativePanel.LeftOf="inputMailBox" 
                       Margin="5"
                       Text="Mail"
                       >
            </TextBlock>
            <Button Name="SearchButton"
                    Click="SearchButton_Click"
                    RelativePanel.RightOf="inputMailBox"
                    Margin="20, 0"
                >Rechercher
            </Button>
        </RelativePanel>
        
    </RelativePanel>
</Page>
